<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyActivity">

    <Spinner
        android:id="@+id/SpinnerBuyGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"/>

    <Spinner
        android:id="@+id/SpinnerBuyComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SpinnerBuyGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/buyQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SpinnerBuyComponent"
        android:hint="Enter quantity in dL ..."
        android:inputType="text"
        android:padding="15dp"
        android:background="@drawable/input_outline"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:layout_below="@id/buyQuantity"
        android:layout_marginTop="100dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:id="@+id/buyButton"/>

    <TextView
        android:text="Place your order"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />
</RelativeLayout>