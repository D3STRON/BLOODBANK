<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Details"
        android:id="@+id/eventDetailsText"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/bloodBankName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventDetailsText"
        android:background="@drawable/input_outline"
        android:hint="Enter Blood Bank Name"
        android:inputType="text"
        android:padding="15dp"
        android:layout_marginBottom="10dp"

        />
    <EditText
        android:id="@+id/eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bloodBankName"
        android:background="@drawable/input_outline"
        android:hint="Enter Event Name"
        android:inputType="text"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/eventAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventName"
        android:background="@drawable/input_outline"
        android:hint="Enter Event Address"
        android:inputType="text"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/eventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventAddress"
        android:background="@drawable/input_outline"
        android:hint="Enter Event Description"
        android:inputType="text"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/eventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventDescription"
        android:background="@drawable/input_outline"
        android:hint="Enter Event Date"
        android:inputType="text"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventDate"
        android:layout_centerHorizontal="true"
        android:text="ADD EVENT"
        android:id="@+id/addEventBtn"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"

        />
</RelativeLayout>